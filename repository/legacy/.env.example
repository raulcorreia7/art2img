# art2image Environment Configuration
# Copy this file to .env and update paths for your setup

# Path to the palette file (PALETTE.DAT)
PALETTE_PATH=tests/assets/PALETTE.DAT

# Path to directory containing ART files (*.art)
ART_FILES_DIR=tests/assets/

# Output format: tga or png
OUTPUT_FORMAT=png

# Number of threads to use for processing
THREADS=-1

# Generate animation data (true/false)
GENERATE_ANIMATION=true

# Verbose output (true/false)
VERBOSE=true
